{
  "name": "aidioma-v2",
  "version": "1.0.0",
  "description": "AI-powered Spanish learning platform with intelligent translation practice",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:client": "cd client && pnpm dev",
    "dev:server": "cd server && pnpm dev",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "cd client && pnpm build",
    "build:server": "cd server && pnpm build",
    "type-check": "cd client && pnpm exec tsc --noEmit && cd ../server && pnpm exec tsc --noEmit",
    "setup": "pnpm install",
    "db:generate": "cd server && pnpm db:generate",
    "db:migrate": "cd server && pnpm db:migrate",
    "db:studio": "cd server && pnpm db:studio"
  },
  "workspaces": ["client", "server", "shared"],
  "devDependencies": {
    "concurrently": "^8.2.0",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git", 
    "url": "https://github.com/AgoraLabsGit/aidioma.v2"
  },
  "keywords": [
    "spanish",
    "learning", 
    "ai",
    "translation",
    "education",
    "language"
  ],
  "author": "Agora Labs",
  "license": "UNLICENSED"
}
